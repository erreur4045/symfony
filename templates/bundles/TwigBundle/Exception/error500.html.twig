{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex align-items-center min-vh-100">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>
                        Oops!</h1>
                    <h2>
                        500 Internal Server Error</h2>
                    <div class="error-details">
                        La page demandée n'a pas pu être changée à cause d'une erreur de serveur.
                    </div>
                    <div class="error-actions">
                        <a href="{{path('home')}}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                            Retour à la page d'accueil. </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
