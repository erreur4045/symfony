{% extends 'base.html.twig' %}

{% block title %}Editer votre figure!{% endblock %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
        <div class="container">
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        <div class="row">
        <div class="col-md-12 justify-content-center">
        <h1 class="text-center">{{ h1 }}</h1>
        {% for pictureslinks in figure.pictureslinks %}
            {% if pictureslinks.firstimage == 1 %}
                <h1 class="text-center">Image à la une</h1>
                <div class="card mx-auto" style="width: 18rem;">
                    <img src="{{ asset('uploads/figureimage/') ~ pictureslinks.linkpictures }}"
                         class="card-img-top" alt="{{ pictureslinks.alt }}">
                    <div class="card-body">
                        <h6>Desciption de l'image :</h6>
                        <p class="card-text">{{ pictureslinks.alt }}</p>
                        <span class="d-inline-block">
                                            {{ include('block_for_include/modal_delete_picture.html.twig') }}
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#exampleModal{{ pictureslinks.id }}">
                                              <i class="material-icons">delete_sweep</i>
                                            </button>
                                            <button type="button" class="btn btn-outline-primary"><a
                                                        href="{{ path('update.picture', {id: pictureslinks.id}) }}"><i
                                                            class="material-icons">create</i></a>
                                            </button>
                                </span>
                    </div>
                </div>
                <hr>
                </div>
                </div>
                </div>
            {% endif %}
        {% endfor %}
        <div class="container">
        <h1 class="text-center">Autres médias</h1>
        <div class="d-flex flex-sm-row flex-column justify-content-center" style="flex-wrap: wrap">
        {% for pictureslinks in figure.pictureslinks %}
            {% if pictureslinks.firstimage == 0 %}
                <div class="card m-1 p-2 card_video">
                    <img src="{{ asset('uploads/figureimage/') ~ pictureslinks.linkpictures }}"
                         class="card-img-top " alt="{{ pictureslinks.alt }}">
                    <div class="card-body">
                        <h6>Desciption de l'image :</h6>
                        <p class="card-text">{{ pictureslinks.alt }}</p>
                        <span class="d-inline-block card-body">
                                            {{ include('block_for_include/modal_delete_picture.html.twig') }}
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#exampleModal{{ pictureslinks.id }}">
                                              <i class="material-icons">delete_sweep</i>
                                            </button>
                                            <button type="button" class="btn btn-outline-primary"><a
                                                        href="{{ path('update.picture', {id: pictureslinks.id}) }}"><i
                                                            class="material-icons">create</i></a>
                                            </button>
                                </span>
                    </div>
                </div>
            {% endif %}
            {% endfor %}
            {% for video in figure.videolinks %}
                <div class="card m-1 card_video p-2">
                    <div class="card-body">
                        <div class="embed-responsive-item">
                            <iframe class="" src="{{ video.linkvideo }}"
                                    allowfullscreen></iframe>
                            <span class="d-inline-block">
                                            {{ include('block_for_include/modal_delete_video.html.twig') }}
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#video{{ video.id }}">
                                              <i class="material-icons">delete_sweep</i>
                                            </button>
                                            <button type="button" class="btn btn-outline-primary"><a
                                                        href="{{ path('update.video', {id: video.id}) }}"><i
                                                            class="material-icons">create</i></a>
                                            </button>
                                </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>

        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}
                <div class="d-flex flex-wrap">
                    <div class="col-md-6 h3">{{ form_row(form.name) }}</div>
                    <div class="col-md-6 h3">{{ form_row(form.idfiguregroup) }}</div>
                </div>
                <div class="col-md-12 h3">
                    {{ form_row(form.description) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary">Sauvegarder</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    {% else %}
        {{ include('block_for_include/access_denied.html.twig') }}
    {% endif %}
{% endblock %}