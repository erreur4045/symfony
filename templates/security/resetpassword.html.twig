{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <h1 class="text-center col-12">Réinitialiser votre mot de passe</h1>
            {{ include('block_for_include/flash_bag.html.twig') }}
            <div class="col-lg-6 col-md-6 col-sm-8 border border-dark rounded p-2 m-2">
                {{ form_start(form) }}
                {{ form_row(form.email,{ 'attr': {'placeholder': 'Indiquer votre email'}}) }}
                {{ form_row(form.password,{ 'attr': {'placeholder': 'Ajouter votre nouveau mot de passe'}}) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success">Réinitialiser</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}